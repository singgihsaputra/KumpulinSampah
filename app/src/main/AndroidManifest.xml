<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.crevion.hackathon.kumpulinsampah">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".main.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.DetailSampah"
            android:label="@string/title_activity_detail_sampah"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main.DetailPesanan"
            android:label="Detail Pesanan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".main.TambahActivity" />
        <activity android:name=".main.MapsActivity" />
        <activity
            android:name=".main.Sampahku"
            android:label="Sampahku"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".main.PesananSampah"
            android:label="Pesanan Sampah"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
